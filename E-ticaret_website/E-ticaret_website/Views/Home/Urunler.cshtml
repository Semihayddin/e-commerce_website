@using ElektronikMagazaWebsite.Controllers;
@using EntityFrameworkLibrary;
@using BusinessLibrary;
@using ElektronikMagazaWebsite.Models;
@model PageItem

@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <a href="/"><span>Anasayfa ></span></a>
                    <span>@Model.kategori.KategoriAdi ></span>
                    <span>@Model.urun.UrunAdi</span>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="section" id="product">
    <div class="container py-1">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="left-images">
                    <img src="../@Model.urun.UrunResimUrl1" alt="">
                    @if (Model.urun.UrunResimUrl2 == null)
                    {

                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="../@Model.urun.UrunResimUrl2" alt="">
                        </div>
                    }
                    @if (Model.urun.UrunResimUrl3 == null)
                    {

                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="../@Model.urun.UrunResimUrl3" alt="">
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="right-content">
                    <h2 class="mb-3">@Model.urun.UrunAdi</h2>
                    <h4 class="text-primary mb-4">@Model.urun.UrunFiyat.ToString("C2")</h4>

                    <p class="text-muted">@Model.urun.UrunAltAciklama</p>
                    <p>@Model.urun.UrunAciklama</p>

                    <div class="quantity-content d-flex align-items-center my-4">
                        <h6 class="me-3">Adet:</h6>
                        <div class="quantity buttons_added d-flex">
                            <a onclick="sepettenCikar(@Model.urun.UrunID)" class="btn btn-outline-secondary minus">-</a>
                            <input type="number" step="1" min="1" max="" name="quantity" value="1" title="Qty" class="form-control mx-2 text-center" style="width: 70px;">
                            <a onclick="sepeteEkle(@Model.urun.UrunID)" class="btn btn-outline-secondary plus">+</a>
                        </div>
                    </div>

                    <div class="total d-flex justify-content-between align-items-center mb-4">
                        <h5>Toplam Tutar:</h5>
                        <h4 class="text-success">@Model.urun.UrunFiyat.ToString("C2")</h4>
                    </div>

                    <div class="main-border-button">
                        <a href="javascript:void(0)" onclick="sepeteEkle(@Model.urun.UrunID)" class="btn btn-primary w-100 py-2">Sepete Ekle</a>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</section>



