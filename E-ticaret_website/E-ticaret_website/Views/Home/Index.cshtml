@using ElektronikMagazaWebsite.Controllers;
@using EntityFrameworkLibrary;
@using BusinessLibrary;
@using ElektronikMagazaWebsite.Models;
@model PageItem

@{
    ViewBag.Title = "Ana Sayfa";
    var listeKategori = UiData.GetKategoriler();
    var listeurunler = UiData.GetUrunler();
}
<div class="main-banner" style="background-color:white" id="top">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-content">
                    <div class="thumb">
                        <div class="inner-content">
                            <h4>Ürünlerimiz</h4>

                            
                        </div>
                        <img src="~/assets/images/ürünlerimiz.jpg" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="right-content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="right-first-image">
                                <div class="thumb">
                                    <div class="inner-content">
                                        <h4>Akıllı Hizmetler</h4>


                                    </div>
                                    <div class="hover-content">
                                        <div class="inner">

                                            <p>Endüstri için ölçeklenebilir bulut hizmetleri.</p>
                                            <div class="main-border-button">
                                                <a href=/kategoriler/akilli-hizmetler-3>Keşfet</a>
                                            </div>
                                        </div>
                                    </div>
                                    <img src="~/assets/images/akıllıhizmet.jpg">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="right-first-image">
                                <div class="thumb">
                                    <div class="inner-content">
                                        <h4>Otomasyon Yazılım</h4>

                                    </div>
                                    <div class="hover-content">
                                        <div class="inner">

                                            <p>Konfigürasyondan ve sistem işletimine yardımcı yazılımlar</p>
                                            <div class="main-border-button">
                                                <a href=/kategoriler/otomasyon-yazilim-4>Keşfet</a>
                                            </div>
                                        </div>
                                    </div>
                                    <img src="~/assets/images/otomasyon.jpg">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="right-first-image">
                                <div class="thumb">
                                    <div class="inner-content">
                                        <h4>HMI'lar ve IPC'ler</h4>

                                    </div>
                                    <div class="hover-content">
                                        <div class="inner">

                                            <p>HMI paneller ve endüstriyel PC'ler</p>
                                            <div class="main-border-button">
                                                <a href=/kategoriler/hmilar-ve-ipcler-5>İncele</a>
                                            </div>
                                        </div>
                                    </div>
                                    <img src="~/assets/images/hmı.jpg">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="right-first-image">
                                <div class="thumb">
                                    <div class="inner-content">
                                        <h4>Endrüstiyel Haberleşme</h4>

                                    </div>
                                    <div class="hover-content">
                                        <div class="inner">

                                            <p>Sahadan kontrol düzeyine kadar verilerin güvenilir iletimi.</p>
                                            <div class="main-border-button">
                                                <a href=/kategoriler/endüstriyel-haberlesme-6>İncele</a>
                                            </div>
                                        </div>
                                    </div>
                                    <img src="~/assets/images/endüstriyel.jpg">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="section" id="women">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <h2>Popüler Ürünler</h2>
                    <span>En Çok Satılan Ürünlerimizi Detaylı Bir Şekilde İnceleyin</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="women-item-carousel">
                    <div class="owl-women-item owl-carousel">
                        @foreach (var item in listeurunler)
                        {
                            if (item.UrunPopuler == true)
                            {
                                <div class="item">
                                    <div class="thumb">
                                        <div class="hover-content">
                                            <ul>
                                                <li><a href="/urun-detayi/@UrlHelper_.FriendlyURLTitle(@item.UrunAdi)-@item.UrunID"><i class="fa fa-eye"></i></a></li>
                                                <li><a href="javascript:void(0)" onclick="sepeteEkle(@item.UrunID)"><i class="fa fa-shopping-cart"></i></a></li>
                                            </ul>
                                        </div>
                                        <img src="../@item.UrunResimUrl1" alt="@item.UrunAdi">
                                    </div>
                                    <div class="down-content">
                                        <h4>@item.UrunAdi</h4>
                                        <span>@item.UrunFiyat.ToString("C2")</span>
                                        <span class="badge-secondary" style="background-color: #d11313; color: white; padding: 5px 10px; font-size: 14px; border-radius: 12px; font-weight: bold; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); display: inline-block;">Popüler Ürün</span>

                                    </div>
                                </div>


                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section" id="kids">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <h2>Yeni Ürünler</h2>
                    <span>
                        Yeni Ürünlerimizi Detaylı Bir Şekilde İnceleyin
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="kid-item-carousel">
                    <div class="owl-kid-item owl-carousel">
                        @foreach (var item in listeurunler)
                        {
                            if (item.UrunYeni == true)
                            {
                                <div class="item">
                                    <div class="thumb">
                                        <div class="hover-content">
                                            <ul>
                                                <li><a href="/urun-detayi/@UrlHelper_.FriendlyURLTitle(@item.UrunAdi)-@item.UrunID"><i class="fa fa-eye"></i></a></li>
                                                <li><a href="javascript:void(0)" onclick="sepeteEkle(@item.UrunID)"><i class="fa fa-shopping-cart"></i></a></li>
                                            </ul>
                                        </div>
                                        <img src="../@item.UrunResimUrl1" alt="@item.UrunAdi">
                                    </div>
                                    <div class="down-content">
                                        <h4>@item.UrunAdi</h4>
                                        <span>@item.UrunFiyat.ToString("C2")</span>
                                        <span class="badge-secondary" style="background-color: #1e78c8; color: white; padding: 5px 10px; font-size: 14px; border-radius: 12px; font-weight: bold; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); display: inline-block;">Yeni Ürün</span>

                                    </div>
                                </div>


                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section" id="explore">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-content">
                    <h2>Ürünlerimizi Keşfedin</h2>
                    <span>Enerji üretim, dağıtım ve saklama sistemlerinde dijitalleşme alanında en son teknolojiye sahip ürünlerimizle tanışın. Bu tasarım, ihtiyaçlarınıza uygun şekilde özelleştirilebilir ve genişletilebilir bir altyapıya sahiptir.</span>
                    <div class="quote">
                        <i class="fa fa-quote-left"></i><p>Bu ürünler, enerji verimliliğini artırmak ve süreçlerinizi optimize etmek için özel olarak geliştirilmiştir.</p>
                    </div>
                    <p>Sitemizde akıllı sayaçlar, enerji izleme cihazları, SCADA sistemleri, akıllı trafolar ve inverterler gibi birçok ürün çeşidi bulunmaktadır. Tüm ürünlerimiz, yenilikçi çözümler sunarak iş süreçlerinizi kolaylaştırmayı hedefler.</p>
                   
                </div>
            </div>
            <div class="col-lg-6">
                <div class="right-content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="leather">
                                <h4>Akıllı Çözümler</h4>
                                <span>Dijital Geleceğe Uzanın</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="first-image">
                                <img src="../assets/images/akıllı.jpg" alt="Akıllı Cihazlar">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="second-image">
                                <img src="../assets/images/2x.jpg" alt="Enerji İzleme Sistemleri">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="types">
                                <h4>Dijital Dönüşüm </h4>
                                <span>Ürünlerimizle Güvenli Dönüşüm</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

